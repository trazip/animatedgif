<div class="bg-gray-100">
  <div class="flex justify-center items-center content">
    <div class="shadow sm:rounded-md sm:overflow-hidden w-3/6">
      <div class="px-4 py-5 bg-white space-y-6 sm:p-6 w-full">
        <div class="mb-6">
          <%= cl_image_tag @gif.image.key, class: "object-cover max-h-96 w-full" %>
        </div>
        <%= form_with(model: @gif, local: true, multipart: true) do |form| %>
          <div class="mb-6">
            <%= form.label :tags, class: "block text-sm font-medium text-gray-700 my-2", hint: "(separated with commas)" %>
            <%= form.text_field :tag_list, class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-300 rounded py-3 px-4 leading-tight" %>
          </div>

          <div class="mb-6 flex space-x-4">
            <%= form.submit  class: "cursor-pointer bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-2 rounded-md text-sm font-medium w-full mt-2" %>
            <%= link_to 'Cancel', :back, class: "cursor-pointer bg-gray-500 hover:bg-gray-600 text-white px-3 py-2 rounded-md text-sm font-medium w-full mt-2 text-center" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
