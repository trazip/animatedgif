<div class="grid grid-cols-1 sm:grid-cols-2 gap-y-4 sm:gap-4 lg:grid-cols-3 m-3">
  <% @gifs.each do |gif| %>
    <div class="bg-white shadow rounded border border-gray-300 overflow-hidden">
      <%= link_to gif_path(gif)  do %>
        <% if gif.image.attached? %>
          <%= cl_image_tag gif.image.key, class: "object-cover h-80 w-full" %>
        <% end %>
      <% end %>
      <div class="p-3">
        <p class="text-sm text-gray-500 my-2"> Uploaded by <%= link_to gif.user.name, user_path(gif.user), class: "text-yellow-500" %></p>
          <% gif.tags.each do |tag| %>
            <div class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%=['green','blue', 'pink', 'purple', 'gray', 'yellow', 'indigo'].sample%>-400 text-white">
              <%= link_to tag.name, random_gif_path(tag: tag.name) %>
            </div>
          <% end %>
      </div>
    </div>
  <% end %>
</div>
