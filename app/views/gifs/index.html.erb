<div class="grid grid-cols-1 sm:grid-cols-2 gap-y-4 sm:gap-4 lg:grid-cols-4 m-3">
  <% if Gif.any? %>
    <% @gifs.each do |gif| %>
      <div class="bg-white shadow rounded border border-gray-300 overflow-hidden">
        <%= link_to gif_path(gif)  do %>
          <% if gif.image.attached? %>
            <%= cl_image_tag gif.image.key, class: "object-cover h-56 w-full" %>
          <% end %>
        <% end %>
        <div class="p-3">
          <p class="text-sm text-gray-500 my-2"> Uploaded by <%= link_to gif.user.name, user_path(gif.user), class: "text-yellow-500" %></p>
            <% gif.tags.each do |tag| %>
              <div class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-500 text-white">
                <%= link_to tag.name, random_gif_path(tag: tag.name) %>
              </div>
            <% end %>
        </div>
      </div>
    <% end %>
    <% else %>
      <div class="flex justify-center items-center content">
        <div class="shadow sm:rounded-md sm:overflow-hidden w-3/6">
          <div class="px-4 py-5 bg-white space-y-6 sm:p-6 w-full">
            <h1>Unfortunately there are no currently no gifs</h1>
          </div>
        </div>
      </div>
  <% end %>
</div>
